// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Multi-tenant Org support
model Org {
  id                String            @id @default(cuid())
  name              String            @unique
  slug              String            @unique
  logoUrl           String?
  primaryColor      String            @default("#0A0A12")
  accentColor       String            @default("#00D1FF")
  secondaryColor    String            @default("#E0B130")
  successColor      String            @default("#00FFC2")
  dangerColor       String            @default("#FF4D4D")
  textColor         String            @default("#FFFFFF")
  googleSheetId     String?
  discordBotToken   String?
  discordBotLastSeen DateTime?
  discordGuildId    String?
  
  users             User[]
  lootItems         LootItem[]
  lootRequests      LootRequest[]
  lootSessions      LootSession[]
  distributionLogs  DistributionLog[]
  whitelabelConfig  WhitelabelConfig?
  
  // Alliances
  alliances         Alliance[] @relation("OrgAlliances")
  alliedWith        Alliance[] @relation("AllyAlliances")
  sentAllianceRequests     AllianceRequest[] @relation("SentAllianceRequests")
  receivedAllianceRequests AllianceRequest[] @relation("ReceivedAllianceRequests")

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

model Alliance {
  id        String   @id @default(cuid())
  orgId     String
  allyId    String
  createdAt DateTime @default(now())

  org       Org      @relation("OrgAlliances", fields: [orgId], references: [id], onDelete: Cascade)
  ally      Org      @relation("AllyAlliances", fields: [allyId], references: [id], onDelete: Cascade)

  @@unique([orgId, allyId])
}

model AllianceRequest {
  id           String   @id @default(cuid())
  senderOrgId  String
  targetOrgId  String
  status       String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  sender       Org      @relation("SentAllianceRequests", fields: [senderOrgId], references: [id], onDelete: Cascade)
  target       Org      @relation("ReceivedAllianceRequests", fields: [targetOrgId], references: [id], onDelete: Cascade)

  @@unique([senderOrgId, targetOrgId])
}

model WhitelabelConfig {
  id          String   @id @default(cuid())
  orgId       String   @unique
  org         Org      @relation(fields: [orgId], references: [id])
  themeJson   String?  // Store custom theme overrides (CSS vars, etc)
  footerText  String?
  headerText  String?
}

model OrgRequest {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  requesterName String
  contactInfo   String
  status        String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt     DateTime @default(now())
}

// User & RBAC
model User {
  id            String    @id @default(cuid())
  username      String?   @unique
  password      String?   // Hashed
  email         String?   @unique
  discordId     String?   @unique
  name          String?
  image         String?
  emailVerified DateTime?
  role          Role      @default(MEMBER)
  orgId         String?
  org           Org?      @relation(fields: [orgId], references: [id])
  
  accounts      Account[]
  sessions      Session[]
  lootRequests  LootRequest[]
  lootParticipations LootSessionParticipant[]
  distributions DistributionLog[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? 
  access_token       String? 
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? 
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  MEMBER
  ADMIN
  SUPERADMIN
}

// The actual items currently in the Org's loot pool
model LootItem {
  id            String   @id @default(cuid())
  orgId         String
  org           Org      @relation(fields: [orgId], references: [id])
  
  name          String
  category      String   // Ship Component, Weapon, Gear, Key, etc.
  subCategory   String?  // e.g. "Power Plant", "Assault Rifle"
  quantity      Int      @default(1)
  
  // Dynamic attributes for SC components
  size          String?
  class         String?
  grade         String?
  manufacturer  String?
  
  source        String?  // e.g. "Google Sheet", "Manual"
  lastUpdatedBy String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Cache of all SC items from the Wiki API for autocomplete and metadata
model SCItemCache {
  id           String   @id @default(cuid())
  wikiId       String   @unique
  name         String   @unique
  type         String   // component, weapon, armor, etc.
  subType      String?
  manufacturer String?
  size         String?
  grade        String?
  class        String?
  description  String?
  imageUrl     String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// History of loot movement
model DistributionLog {
  id          String   @id @default(cuid())
  orgId       String
  org         Org      @relation(fields: [orgId], references: [id])
  
  recipientId String?
  recipient   User?    @relation(fields: [recipientId], references: [id], onDelete: Cascade)
  
  itemName    String
  quantity    Int
  type        String   // "GIVEAWAY", "MANUAL", "WITHDRAWN", "ASSIGNED"
  method      String   // "RNG_WHEEL", "ADMIN_ASSIGN", "REQUEST_APPROVAL"
  
  performedBy String?  // Admin who did the action
  timestamp   DateTime @default(now())
}

model LootRequest {
  id            String   @id @default(cuid())
  orgId         String   // The org making the request
  org           Org      @relation(fields: [orgId], references: [id])
  
  targetOrgId   String?  // The ally being requested from (null if local)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  itemId        String
  itemName      String
  category      String
  quantity      Int      @default(1)
  
  status        String   @default("PENDING") // PENDING, APPROVED, REJECTED
  denialReason  String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LootSession {
  id            String   @id @default(cuid())
  orgId         String
  org           Org      @relation(fields: [orgId], references: [id])
  
  title         String
  status        String   @default("ACTIVE") // ACTIVE, ARCHIVED
  
  items         LootSessionItem[]
  participants  LootSessionParticipant[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LootSessionItem {
  id            String   @id @default(cuid())
  sessionId     String
  session       LootSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  itemId        String   // Reference to LootItem
  name          String
  category      String
  imageUrl      String?
  rarity        String   @default("COMMON") // COMMON, RARE, LEGENDARY
}

model LootSessionParticipant {
  id            String   @id @default(cuid())
  sessionId     String
  session       LootSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  openedAt      DateTime?
  wonItemName   String?
  
  @@unique([sessionId, userId])
}
